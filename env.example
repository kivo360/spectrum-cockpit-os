# Example environment variables for Advanced Task Manager
# Copy this to .env and modify as needed

# Database settings
TASK_DB_PATH=./data/tasks.db
TASK_DATA_DIR=./data

# Server settings
TASK_SERVER_NAME=advanced-task-manager
TASK_LOG_LEVEL=INFO
TASK_MAX_TASKS=1000

# Configuration file (optional)
TASK_MANAGER_CONFIG_FILE=./config.toml

# Debug mode
TASK_DEBUG=false
TASK_MANAGER_DEBUG=false

# Pydantic settings prefix (all config options can use this prefix)
# TASK_MANAGER_DATABASE__PATH=./custom/path/tasks.db
# TASK_MANAGER_SERVER__LOG_LEVEL=DEBUG
# TASK_MANAGER_UI__CLI_COLORS=true